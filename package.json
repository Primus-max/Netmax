{
  "name": "Netmax",
  "version": "1.4.2",
  "description": "App for NETMAX",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "V-Max",
    "email": "pr1musmax@yandex.ru"
  },
  "license": "ISC",
  "build": {
    "directories": {
      "output": "dist"
    },
    "productName": "NETMAX",
    "appId": "com.v-max.netmax",
    "publish": [
      {
        "provider": "github",
        "owner": "Primus-max",
        "repo": "Netmax"
      }
    ],
    "files": [
      "**/*"
    ],
    "extraMetadata": {
      "name": "NETMAX"
    },
    "win": {
      "icon": "./assets/images/icon256.png",
      "target": [
        "nsis"
      ],
      "artifactName": "netmax-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false
    },   
    "linux": {
      "icon": "./assets/images/icon256.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "artifactName": "netmax-${version}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3"    
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-log": "^5.1.6",
    "electron-updater": "^6.2.1",
    "keytar": "^7.9.0"
  }
}
